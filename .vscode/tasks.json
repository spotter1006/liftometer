{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build",
			"command": "/usr/bin/g++",
			"args": [
				// "-fvisibility=default",
				"-Wl,--verbose",
				"-lgpiodcxx",
				// "-fpermissive",
				"-I${workspaceFolder}../",
				"-pthread",
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/*.c*",
				"-o",
				"${fileDirname}/build/debug/liftometer"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++-9"
		}
	]
}